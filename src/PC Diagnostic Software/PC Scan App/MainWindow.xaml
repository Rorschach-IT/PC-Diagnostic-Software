<Window x:Class="PC_Scan_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mvvm="clr-namespace:PC_Scan_App.MVVM" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewmodels="clr-namespace:PC_Scan_App.ViewModels" DataContext="{Binding MainViewModel}"
        Title="PC Scan App"
        ResizeMode="CanResize"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Height="auto"
        Width="auto">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Background" Value="#FBF9F9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e6f0e9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FBF9F9" Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Headers -->
        <Border Grid.Row="0" Grid.Column="0">
            <TextBlock Text="SOFTWARE"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
            <TextBlock Text="HARDWARE"/>
        </Border>

        <!-- Software Side -->
        <Border Grid.Row="1" Grid.Column="0">
            <Button Content="Windows full information" Command="{Binding ShowWindowsInfo}" Click="showContent"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0">
            <Button Content="BIOS data" Command="{Binding ShowBiosInfo}"/>
        </Border>

        <!-- Hardware Side -->
        <Border Grid.Row="1" Grid.Column="1">
            <Button Content="Processor" Command="{Binding ShowProcessorInfo}"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="2">
            <Button Content="Motherboard" Command="{Binding ShowMotherboardInfo}"/>
        </Border>

        <Border Grid.Row="2" Grid.Column="1">
            <Button Content="Memory" Command="{Binding ShowMemoryInfo}"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="2">
            <Button Content="Storage" Command="{Binding ShowStorageInfo}"/>
        </Border>

        <Border Grid.Row="3" Grid.Column="1">
            <Button Content="Graphics" Command="{Binding ShowGraphicsCardInfo}"/>
        </Border>

        <!-- Information Header -->
        <Border Name="InformationHeader" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Visibility="Collapsed">
            <TextBlock Text="{Binding SectionHeader}" FontSize="20"/>
        </Border>

        <!-- Information Display -->
        <ScrollViewer Name="InformationDisplay" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Height="400"
              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
            <ListView ItemsSource="{Binding CurrentData}" SelectionMode="Single" IsHitTestVisible="False" FontSize="18">
                <ListView.View>
                    <GridView>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock FontWeight="Bold" Text="{Binding Key}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Value}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
    </Grid>
</Window>
